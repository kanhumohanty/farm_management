<header class="bg-blue-500 shadow">
  <div class="mx-auto max-w-7xl px-2 sm:px-4 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-4">
        <span class="text-xl font-semibold text-gray-900">Farm-Management</span>
      </div>

      <!-- Navigation Links -->
      <nav class="hidden lg:flex space-x-8" aria-label="Global">
        <%= link_to "Home", root_path, class: "text-gray-900 hover:bg-gray-500 hover:text-gray-900 inline-flex items-center rounded-md py-2 px-3 text-sm font-medium" %>
        <%= link_to "Crops", crops_path, class: "text-gray-900 hover:bg-gray-500 hover:text-gray-900 inline-flex items-center rounded-md py-2 px-3 text-sm font-medium" %>
    
         <%= link_to  "Finance", finance_path, class: "text-gray-900 hover:bg-gray-500 hover:text-gray-900 inline-flex items-center rounded-md py-2 px-3 text-sm font-medium" %>
        
        
      </nav>

      

      <!-- Profile Dropdown Button -->
      <div class="relative inline-block text-left">
        <button type="button" class="inline-flex justify-center px-4 py-2 bg-gray-800 text-white rounded-md focus:outline-none" onclick="toggleDropdown()">
          Profile
          <!-- Down Arrow Icon -->
          <svg class="ml-2 w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <!-- Dropdown Menu -->
        <div id="dropdown-menu" class="absolute right-0 mt-2 w-32 bg-white rounded-md shadow-lg hidden">
          <% if user_signed_in? %>
          <%= link_to "Logout",  destroy_user_session_path, data: {"turbo-method": :delete }, class: "block px-4 py-2 text-gray-700 hover:bg-gray-500", role:"menuitem", tabindex:"-1" %>
         
          <% else %>
         <%= link_to "Login", new_user_session_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-500", role:"menuitem", tabindex:"-1" %>
          <%= link_to "SignUp",  new_user_registration_path, class: "block px-4 py-2 text-gray-700 hover:bg-gray-500", role:"menuitem", tabindex:"-1" %>
           <% end %>
        </div>
      </div>

      <script>
        function toggleDropdown() {
          const dropdown = document.getElementById('dropdown-menu');
          dropdown.classList.toggle('hidden');
        }
      </script>
    </div>
  </div>
</header>
