
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <!-- Email Field -->
      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Password Field -->
      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>
      </div>

      <!-- Remember Me Checkbox (if enabled) -->
      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
        </div>
      <% end %>

      <!-- Submit Button -->
      <div class="actions">
        <%= f.submit "Log in", class: "w-full py-2 px-4 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <!-- Additional Links -->
    <div class="mt-4 flex items-center justify-between">
      <a href="<%= new_user_password_path %>" class="text-sm text-blue-600 hover:underline">Forgot your password?</a>
      <a href="<%= new_user_registration_path %>" class="text-sm text-blue-600 hover:underline">Sign up</a>
    </div>
  </div>
</div>
