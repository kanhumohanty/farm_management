<h2 class="text-4xl font-bold text-center mb-8 text-green-600">Our Crops</h2>
<section class="container mx-auto p-6 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
  <% @crops.each do |crop| %>
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition duration-300 transform hover:scale-105">
      <img src="<%= crop[:image] %>" alt="<%= crop[:name] %>" class="w-80 h-30 object-cover">
      <div class="p-6">
        <h3 class="text-2xl font-bold text-gray-800 mb-2"><%= crop[:name] %></h3>
        <p class="text-gray-600 mb-4"><%= crop[:description] %></p>
        <div class="flex justify-between items-center">
          <%= link_to 'Learn More', crop_path(crop[:name]), class: 'inline-block px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600 transition duration-200' %>
          <span class="text-gray-500 font-medium">Click for details</span>
        </div>
      </div>
    </div>
  <% end %>
</section>
